@model DeviceInformation.ViewModels.Input.DeviceEditModel

<h3>Create new worker</h3>
<input type="hidden" name="sever-action" id="server-action" value="@ViewData["Act"]" />
@Html.HiddenFor(x=> x.DeviceId)
<div class="form-group row mb-1">
    @Html.LabelFor(x => x.DeviceName, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
    <div class="col-4">
        @Html.TextBoxFor(x => x.DeviceName, new { @class = "form-control form-control-sm" })
        @Html.ValidationMessageFor(x => x.DeviceName, "", new { @class = "text-danger", style = "font-size:small" })
    </div>
</div>
<div class="form-group row mb-1">
    @Html.LabelFor(x => x.DeviceType, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
    <div class="col-4">
        @Html.EnumDropDownListFor(x => x.DeviceType, new { @class = "form-select form-select-sm" })
        @Html.ValidationMessageFor(x => x.DeviceType, "", new { @class = "text-danger", style = "font-size:small" })
    </div>
</div>
<div class="form-group row mb-1">
    @Html.LabelFor(x => x.Price, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
    <div class="col-4">
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control form-control-sm" })
        @Html.ValidationMessageFor(x => x.Price, "", new { @class = "text-danger", style = "font-size:small" })
    </div>
</div>

<div class="form-group row mb-1">
    @Html.LabelFor(x => x.Picture, new { @class = "col-form-label col-form-label-sm col-2 text-end py-2" })
    <div class="col-4 py-2">
        @Html.TextBoxFor(x => x.Picture, new { @class = "form-control form-control-sm", type = "file" })
        @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger", style = "font-size:small" })
    </div>
    <div class="col-2 py-0">
        <img src="~/Pictures/@ViewData["CurrentPic"]" class="img-thumbnail rounded-1" id="preview" style="width:40px" />
    </div>
</div>
<div class="form-group row mb-1">

    <div class="col-4 offset-2">

        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            @Html.CheckBoxFor(x => x.Discontued, new { @class = "form-check-input" })
            <label class="form-check-label" for="Discontinued">
                Discontinued
            </label>
        </div>
    </div>
</div>
<div class="row mb-1">
    <div class="col-4 offset-2">
        <h4>Work log</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Spec</th>
                    <th>Description</th>
                    <td> <button type="submit" class="btn btn-secondary btn-sm add" name="act" value="add" formnovalidate><i class="bi bi-plus"></i></button></td>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Specifications.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.TextBoxFor(x => Model.Specifications[i].Name, new { @class = "form-control form-control-sm", list = "commonspecs" })
                            @Html.ValidationMessageFor(x => Model.Specifications[i].Name, "", new { @class = "text-danger ", style = "font-size:small" })
                        </td>
                        <td>
                            @Html.TextBoxFor(x => Model.Specifications[i].Value, new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(x => Model.Specifications[i].Value, "", new { @class = "text-danger ", style = "font-size:small" })
                        </td>
                        <td>
                            <button type="submit" class="btn btn-secondary btn-sm del" name="act" data-index="@i" value="remove_@i" formnovalidate><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row mb-1">
    <div class="col-6 offset-2">
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary" name="act" value="update">Save to database</button>
        </div>
    </div>
</div>
